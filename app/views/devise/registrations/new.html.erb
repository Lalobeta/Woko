<section id="hero" class="position-relative overflow-hidden">
  <div id="hero-content" class="col-lg-4 col-md-6 mx-auto my-5 px-5">
    <h1><%= ('Registrate!') %></h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render partial: 'shared/alert', resource: resource %>
      <div class="form-group">
        <%= f.input :first_name, label: 'Nombre', autofocus: true, autocomplete: 'Nombre',error: 'Es obligatorio seleccione uno', class: 'form-control' %>
      </div>

      <div class="form-group">
       
         <%= f.input :last_name, label: 'Apellido', autofocus: true, autocomplete: 'Nombre',error: 'Es obligatorio seleccione uno', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.input :email, label: 'Correo electronico' ,autofocus: true, autocomplete: 'email',error: 'Es obligatorio seleccione uno', class: 'form-control' %>
      </div>

      <div class="form-group">
      
        <%= f.input :password,label: 'Contraseña', autocomplete: 'current-password', class: 'form-control' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="form-group">
   
        <%= f.input :password_confirmation,label: 'Confirma Contraseña', autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit t('devise.registrations.sign_up'), class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>

    <div class="text-center">
    <%= render 'devise/shared/links' %>
    </div>
  </div>
</section>