
 
<header id="hero" class="position-relative overflow-hidden text-center">
  <div class="col-md-5 mx-3 my-2">
    <div class="hero-text">
    <h1 class="display-4 font-weight-normal" >Wiki</h1>
    </div>
  </div>
</header>
<div class="container">
  <% @wikis.each do |wiki| %>

    <%= link_to wiki, class: 'text-decoration-none' do %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class='card-title mb-1 text-dark'> <%= wiki.title %></h5>
          <p class='text-secondary mb-0'><%= wiki.description.html_safe %></p>
         
        </div>
      </div>
    <% end %>
  <% end %>
 

    <% if current_user != nil && current_user.author?  %>
      <div class="container" >
        <div class="row mb-4">
            <div class="col-2">  <%= link_to 'Nuevo post', {:action => :new}, {class: 'btn btn-primary btn-block' } %> </div>
       
            <div class="col-2"> <%= link_to 'Atras', {:controller => "home"}, {class: 'btn btn-secondary btn-block'} %> </div>
        </div>
      </div>
    <% elsif current_user == nil %>

      <div class="col-2"> <%= link_to 'Atras', {:controller => "home"}, {class: 'btn btn-secondary btn-block'} %> </div>
    <%end%>
 

  <%= paginate @wikis %>
</div>