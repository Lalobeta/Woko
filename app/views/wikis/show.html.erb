 
<header id="hero" class="position-relative overflow-hidden text-center">
  <div class="col-md-5 mx-3 my-2">
    <div class="hero-text">
    <h1 class="display-4 font-weight-normal" >Articulo</h1>
    </div>
  </div>
</header>

<div class="container">
<p>
  <h1 class="display-3"><%= @wiki.title %></h1>
  
</p>

<p class="lead">
  
  <%= @wiki.content.html_safe %>
</p>

<div id= "like-count"> 
  <%= render 'wikis/likes', wiki: @wiki %>
</div>

<div id= "like-link" > 
  <%= render 'wikis/like_link', wiki: @wiki %>
</div>




<%= commontator_thread (@wiki) %>

<%-  if current_user != nil && current_user.member?   %>
 
   <%= link_to 'Atras', {:action => :index}, {class: "btn btn-secondary btn-lg"} %>
<% elsif current_user != nil && current_user.author? %>
  <%= link_to 'Editar',{ :action => :edit, :id => @wiki.id } , {class: "btn btn-primary btn-lg" }%>
  <%= link_to 'Atras', {:action => :index}, {class: "btn btn-secondary btn-lg"} %> 
<% elsif current_user == nil %>
 <%= link_to 'Atras', {:action => :index}, {class: "btn btn-secondary btn-lg"} %> 

<%end%>
</div>